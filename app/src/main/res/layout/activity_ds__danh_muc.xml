<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DS_DanhMuc">
    <TextView
        android:textColor="#e90909"
        android:textSize="25sp"
        android:gravity="center"
        android:text="QUẢN LÝ DANH MỤC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:onClick="MoManHinhThemDanhMuc"
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:text="Add ">
        </Button>
        <Button
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/btnHieuChinhDM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:text="Edit ">

        </Button>
        <Button
            android:id="@+id/btnThoatDm"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>


    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/LvDsDm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
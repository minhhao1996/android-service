<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSanPham">
    <EditText
        android:id="@+id/editThemMaSp"
        android:hint="Nhập mã sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editThemTenSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nhập Tên sản phẩm" />

    <EditText
        android:inputType="number"
        android:id="@+id/editThemDonGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nhập Đơn Giá" />
    <Spinner
    android:layout_marginTop="5dp"
    android:id="@+id/SpinChonDm"
    android:layout_width="match_parent"
    android:layout_height="40dp" />
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnThemSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lưu Sản Phẩm"
            android:textColor="@android:color/holo_red_dark" />
        <Button
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cancel"
            android:textColor="@android:color/holo_red_dark" />


    </LinearLayout>


    <TextView
        android:layout_gravity="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:id="@+id/txtThongbao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DS_SanPham">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editSearchMaDm"
            android:hint="Nhập Mã Danh Mục"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="center"
            android:text="Search"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/btnSearchMaDm"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/GiaA"
            android:hint="Giá"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:text="Đến"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/GiaB"
            android:hint="Giá"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_gravity="center"
            android:text="Search"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/btnSearchGia"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:onClick="ManHinhThemSanPham"
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:text="Add ">
        </Button>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/btnSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:text="Edit ">
        </Button>
        <Button
            android:layout_marginLeft="10dp"
            android:text="Back"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:id="@+id/btnThoatSp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/lvdssp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>